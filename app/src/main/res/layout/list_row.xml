<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="180dp"
    android:background="@drawable/bg"
    android:id="@+id/rowId"
    android:padding="8dp" >

    <!-- Thumbnail Image -->
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/thumbnail"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="false"
         />


    <Button
        android:id="@+id/websiteId"
        android:layout_below="@id/thumbnail"
        android:background="@drawable/ic_action_web_site"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <!-- Movie Title -->

    <TextView
        android:id="@+id/name"
        android:textColor="#00DDDD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/thumbnail"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="@dimen/title"
        android:text="hello"
        android:textStyle="bold" />

    <!-- Rating -->

    <TextView
        android:id="@+id/sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginTop="1dip"
        android:textColor="@color/year"
        android:layout_marginLeft="10dp"
         android:text="sex"
        android:layout_toRightOf="@id/thumbnail"
        android:textSize="@dimen/rating" />

    <TextView
        android:id="@+id/ageMonths"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/thumbnail"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/sex"
        android:text="Aged goes here"
        android:textColor="@color/year"
        android:textSize="@dimen/year" />
    
    <!-- PG rating -->

    <TextView
        android:id="@+id/primaryBreed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ageMonths"
        android:layout_marginTop="7dp"
        android:text="PrimaryBreed"
        android:layout_toRightOf="@id/thumbnail"
        android:layout_marginLeft="10dp"
        android:textColor="@color/genre"
        android:textSize="@dimen/genre" />

    <View
        android:layout_toRightOf="@id/thumbnail"
        android:layout_below="@id/ageMonths"
        android:layout_marginTop="5dp"
        android:background="@color/LightPink"
        android:layout_marginLeft="10dp"
        android:layout_width="fill_parent"
        android:layout_height="2dp" />

    <TextView
        android:id="@+id/secondaryBreed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/primaryBreed"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@id/thumbnail"
        android:layout_marginLeft="10dp"
        android:text="Secondary Breed"
        android:textColor="@color/genre"
        android:textSize="@dimen/genre" />

    <!-- Release Year -->

    <!--<Button-->
    <!--android:id="@+id/dogButton"-->
    <!--style="@style/customButton"-->
    <!--android:layout_width="90dp"-->
    <!--android:layout_height="120dp"-->
    <!--android:layout_below="@id/ageMonths"-->
    <!--android:scaleX="0.6"-->
        <!--android:padding="4dp"-->
        <!--android:scaleY= "0.5"-->
    <!--android:layout_alignParentTop="true"-->
        <!--android:layout_alignParentRight="true"-->
    <!--android:text="Contact"-->
    <!--android:textSize="23sp" />-->



    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/name"
        android:layout_alignBottom="@+id/name"
        android:layout_centerHorizontal="true"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:visibility="invisible" />

</RelativeLayout>