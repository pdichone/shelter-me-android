<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="290dp"
    android:background="#ff272a1b"
    android:padding="8dp" >

    <!-- Thumbnail Image -->
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/thumbnail"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:background="@color/AliceBlue"
        android:layout_marginRight="8dp" />


    <!-- Animal Name -->

    <TextView
        android:id="@+id/name"
        android:layout_below="@id/thumbnail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/BlueViolet"
        android:text="Miss Kat"
        android:textSize="@dimen/title"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/name"
        android:layout_marginTop="1dip"
        android:text="Sex"
        android:textSize="@dimen/rating" />

    <TextView
        android:id="@+id/ageMonths"
        android:layout_below="@id/sex"
        android:text="Age Months"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/year"
        android:textSize="@dimen/year" />

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/breedLayout"
        android:layout_width="fill_parent"
        android:background="@color/MistyRose"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="14dp"
        android:layout_below="@id/ageMonths"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/primaryBreed"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/breedLayout"
            android:layout_marginTop="5dp"
            android:textColor="@color/genre"
            android:text="Primary Breed"
            android:textSize="@dimen/genre" />


        <TextView
            android:id="@+id/secondaryBreed"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/breedLayout"
            android:layout_marginTop="5dp"
            android:textColor="@color/genre"
            android:text="Secondary Breed"
            android:textSize="@dimen/genre" />

        </LinearLayout>

    <!--<Button-->
